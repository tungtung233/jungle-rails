<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%=  item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.quantity * (product.price_cents / 100.0) %>
  </td>
</tr>
